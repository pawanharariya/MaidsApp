<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.psh.maids">
    <!--
         The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but you must specify either coarse or fine
         location permissions for the 'MyLocation' functionality.
    -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name="com.psh.maids.Activities.Payment"
            android:screenOrientation="nosensor"></activity>
        <activity
            android:name="com.psh.maids.Activities.SplashScreen"
            android:screenOrientation="nosensor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.psh.maids.Activities.RateUser" />
        <activity android:name="com.psh.maids.Activities.Bookings" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name="com.psh.maids.Activities.MapsActivity"
            android:label="@string/title_activity_maps"
            android:screenOrientation="nosensor" />

        <service android:name="com.psh.maids.Utils.NotifyService" />

        <activity
            android:name="com.psh.maids.Activities.MaidsAlert"
            android:screenOrientation="nosensor" />
        <activity
            android:name="com.psh.maids.Activities.ServingArea"
            android:screenOrientation="nosensor" />
        <activity
            android:name="com.psh.maids.Activities.Maids24_7"
            android:screenOrientation="nosensor" />
        <activity
            android:name="com.psh.maids.Activities.Location"
            android:screenOrientation="nosensor" />
        <activity
            android:name="com.psh.maids.Activities.ProfileMain"
            android:screenOrientation="nosensor"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name="com.psh.maids.Activities.Login"
            android:screenOrientation="nosensor" />
        <activity
            android:name="com.psh.maids.Activities.MainActivity"
            android:screenOrientation="nosensor" />

        <meta-data
            android:name="com.razorpay.ApiKey"
            android:value="rzp_test_sVrW5vtI3Nd2pZ" />
    </application>

</manifest>
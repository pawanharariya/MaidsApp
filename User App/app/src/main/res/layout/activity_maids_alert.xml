<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.psh.maids.Activities.MaidsAlert">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/basicDark"
        android:elevation="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/blue_bg"
            android:elevation="8dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="New Maids Alert"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:elevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="New Maids Alert"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@id/new_maids_switch"
                android:text="OFF" />

            <Switch
                android:id="@+id/new_maids_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp" />
            android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/new_maids_switch"
                android:text="ON" />

            <TextView
                android:id="@+id/info_text"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_below="@+id/new_maids_switch"
                android:layout_marginTop="10dp"
                android:background="#ffee58"
                android:gravity="bottom|center_horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="10dp"
                android:text="We will send you notification whenever any new maids are added in your locality."
                android:textColor="@color/black" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_alignTop="@id/info_text"
                android:layout_centerHorizontal="true"
                android:paddingTop="10dp"
                android:src="@drawable/info" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>